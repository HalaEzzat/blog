<div class="comment-body">
  <%= comment.body %>
</div>
<div class="comment-time">
  <%= time_ago_in_words(comment.created_at) %>
 <% if user_signed_in? %>
  ago by <%= comment.user.name %>
<%= link_to 'Delete', [comment.article, comment],
                  method: :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %>
<%= link_to "edit", edit_article_comment_path(@article,comment) %> 
<% else %>
ago by anonymous user
<% end %>
</div>
<hr />
